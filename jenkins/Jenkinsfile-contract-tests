#!groovy
pipeline {

  agent any

  tools {
    jdk 'jdk 8'
    maven 'vmn 3.8'
  }

  parameters {
    string(name: 'pactConsumerName', defaultValue: '', description: 'Name of consumer to verify')
    string(name: 'pactConsumerTags', defaultValue: 'master', description: 'Tags to verify')
  }

  stages {

    stage ('Get provider version which needs to verify') {
      steps {
        sh 'curl -LO https://github.com/pact-foundation/pact-ruby-standalone/releases/download/v1.88.83/pact-1.88.83-linux-x86_64.tar.gz'
        sh 'tar xzf pact-1.88.83-linux-x86_64.tar.gz'
        dir('pact/bin') {
          script {
            env.PROVIDER_VERSION = sh(script: "./pact-broker describe-version -a provider-x -b http://localhost:9292 -l ${PROVIDER_TAG} | tail -1 | cut -f 1 -d \\|", returnStdout: true).trim()
          }
        }
        echo "Verify provider with version: " + PROVIDER_VERSION
      }
    }
    stage("Checkout Latest provider branch which needs to verify") {
      steps {
        sh "git checkout ${PROVIDER_VERSION}"
      }
    }

    stage ('Run Contract Tests') {
      steps {
        sh "mvn clean verify " +
                "-Dpact.provider.version=${GIT_COMMIT} " +
                "-Dpact.verifier.publishResults=true " +
                "-Dpactbroker.consumers=${params.pactConsumerName} " +
                "-Dpact.provider.tag=SIT,${params.pactConsumerTags}"
      }
    }
  }

}